struct Store
{
  //public constructor/ with default constructor
	Store(int in, string name, double ws, int ohn, int mn, string v, int on, double rn, string d)
	{
		itemNum = in;
		itemName = name;
		wholeSale = ws;
		onHandNum = ohn;
		maxNum = mn;
		vendor = v;
		orderNum = on;
		retailNum = rn;
		depart = d;
	}
	Store()
	{
		itemNum = 0;
		itemName = " ";
		wholeSale = 0;
		onHandNum = 0;
		maxNum = 0;
		vendor = " ";
		orderNum = 0;
		retailNum = 0;
		depart = " ";
	}

	int itemNum;
	string itemName;
	double wholeSale;
	int	onHandNum;
	int	maxNum;
	string vendor;
	int	orderNum;
	double retailNum;
	string depart;

	//function prototypes
	int displayChoices();
};

int Store::displayChoices()
{
	int choice;

//Display menu
		cout<< "1. Add"<<endl;
		cout<< "2. Edit"<<endl;
		cout<< "3. Remove"<<endl;
		cout<< "4. View"<<endl;
		cout<< "5. Help"<<endl;
		cout<< "6. Exit"<<endl;
	cin >> choice;

	//validate choice
	while ( choice <1 || choice >6 )
    	{
        	cout << "Enter menu number between 1 and 6: "
				<< "re-enter: ";
			cin >>choice;
		}
	return choice;
}

int main()
{
